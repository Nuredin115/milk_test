<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">pos.config.settings.view.form.inherit.pos.etta</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_waiter_reservation" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_waiter_reservation" />
                        <div class="content-group"
                            id="warning_text_pos_restaurant">
                            Allow waiter reservation
                        </div>
                    </div>
                </div>
                </xpath>
                       </field>
    </record>
</odoo>