<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">pos.config.settings.view.form.inherit.pos.etta</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="disable_remove_order_line_basic_right" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="disable_remove_order_line_basic_right" />
                        <div class="content-group"
                            id="warning_text_pos_restaurant">
                            Restrict ordered order line removal to managers
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//block[@id='pos_pricing_section']" position="before">
                <block title="Zmall Delivery" id="pos_etta_zmall">
                    <setting id="pos_zmall" string="Zmall Settings" help="Set zmall username, password etc.">
                        <field name="enabled_zmall" readonly="pos_has_active_session"/>
                        <div class="content-group" invisible="not enabled_zmall">
                            <div class="mt16">
                                <label string="Endpoint" for="zmall_api_endpoint" class="col-lg-3 o_light_label" />
                                <field name="zmall_api_endpoint" />
                            </div>
                            <div class="mt16">
                                <label string="Username" for="zmall_username" class="col-lg-3 o_light_label" />
                                <field name="zmall_username" />
                            </div>
                            <div class="mt16">
                                <label string="Password" for="zmall_password" class="col-lg-3 o_light_label" />
                                <field name="zmall_password" />
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
            <xpath expr="//block[@id='pos_pricing_section']" position="inside">
                <div class="content-group mt16">
                </div>
                <setting help="Adds a button to set a global service charge">
                    <field name="pos_module_pos_service_charge" readonly="pos_has_active_session" />
                    <div class="content-group mt16" invisible="not pos_module_pos_service_charge">
                        <div class="row">
                            <label string="Service Charge %" for="global_service_charge"
                                class="col-lg-3 o_light_label" />
                            <field name="global_service_charge" field_id="global_service_charge_0" readonly="pos_has_active_session" />
                        </div>
                    </div>
                </setting>
                <setting help="Fiscal Printer Serial Number">
                    <field name="serial_number" />
                </setting>
                <setting help="Fiscal Printer MRC">
                    <field name="fiscal_mrc" />
                </setting>
            </xpath>
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <setting string="Default Customer" help="Set default payment method">
                    <div class="content-group mt16">
                        <field name="pos_customer_id" colspan="4" options="{'no_open': True, 'no_create': True}"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>